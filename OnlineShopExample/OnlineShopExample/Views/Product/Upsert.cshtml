@model OnlineShopExample.Models.ViewModels.ProductVM

@{
    var title = "Create Product";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Product.Id != 0)
    {
        title = "Edit Product";
        <input asp-for="Product.Id" hidden />
    }
    <div class="border-p3">
        <div class="form-group now">
            <h2 class="text-info pl-3">@title</h2>

        </div>
        <br /><br />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <br /><br />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.Description" class="form-control summernote" /></textarea>
                    </div>
                    <br /><br />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadbox" multiple class="form-control" />
                    </div>
                    <br /><br />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                        <option disabled selected>-- Select Category--</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <br /><br />
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Product.Id != 0)
                            {
                                //update
                                <button type="submit" class="btn btn-info w-100">
                                    <i class="fa-solid fa-pen-nib"></i> &nbsp; Update
                                </button> 
                            }
                            else
                            {
                                //create
                                <button type="submit" onclick="return validateInput()" class="btn btn-primary w-100">
                                    <i class="fa-solid fa-pen-nib"></i> &nbsp; Create
                                </button>
                            }
                           
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-backward"></i> Back </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src ="@WC.ImagePath@Model.Product.Image" width="100%" style="border-radius:5px;border:1px solid #bbb" />
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
            });
        });
        @if (!ViewData.ModelState.IsValid)
        {
                <div class="alert alert-danger" >
                @foreach (var state in ViewData.ModelState)
                {
                    @foreach (var error in state.Value.Errors)
                    {
                            <p>@error.ErrorMessage</p>
                    }
                }
                </div>
        }
        function validateInput(){
            if (document.getElementById("uploadbox").value == ""){
                Swal.fire({
                    title: "Error!",
                    text: "Please upload an Image!",
                    icon: "error"
                });
                return false;
            }
            return true;
        }
    </script>

}

